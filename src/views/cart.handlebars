<div>
    <h1>Tu Carrito (ID: {{cid}})</h1>
    
    {{#if products.length}}
        <ul>
            {{#each products}}
            <li>
                <h3>{{this.product.title}}</h3>
                <p>Precio unitario: ${{this.product.price}}</p>
                <p>Cantidad: {{this.quantity}}</p>
                <hr>
            </li>
            {{/each}}
        </ul>
    {{else}}
        <p>El carrito está vacío.</p>
    {{/if}}
</div>